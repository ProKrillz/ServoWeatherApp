<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="ServoWeatherApp.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:ServoWeatherApp.ViewModels"
    x:DataType="vm:MainPageViewModel">

    <VerticalStackLayout Padding="30,0" Spacing="25">
        <Image
            Aspect="Fill"
            HeightRequest="185"
            SemanticProperties.Description="telemetry picture"
            Source="telemetrypicture.jpg" />
        <Label
            FontSize="20"
            HorizontalOptions="Center"
            MinimumWidthRequest="150"
            Text="TELEMETRY MONITORING" />
        <Button
            Command="{Binding GoToTemperatureCommand}"
            HorizontalOptions="Center"
            MinimumHeightRequest="100"
            MinimumWidthRequest="300"
            Text="Temperature" />
        <Button
            Command="{Binding GoToHumidityCommand}"
            HorizontalOptions="Center"
            MinimumHeightRequest="100"
            MinimumWidthRequest="300"
            Text="Humidity" />
        <Button
            Command="{Binding GoToServoMotorCommand}"
            HorizontalOptions="Center"
            MinimumHeightRequest="100"
            MinimumWidthRequest="300"
            Text="Servo Motor" />
    </VerticalStackLayout>

</ContentPage>
