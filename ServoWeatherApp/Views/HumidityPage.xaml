<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="ServoWeatherApp.Views.HumidityPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:chart="clr-namespace:Syncfusion.Maui.Charts;assembly=Syncfusion.Maui.Charts"
    xmlns:models="clr-namespace:ServoWeatherApp.Models"
    xmlns:vm="clr-namespace:ServoWeatherApp.ViewModels"
    Title="HumidityPage"
    x:DataType="vm:HumidityPageViewModel">

    <VerticalStackLayout>

        <chart:SfCartesianChart Title="Humidity">

            <chart:SfCartesianChart.XAxes>
                <chart:DateTimeAxis />
            </chart:SfCartesianChart.XAxes>

            <chart:SfCartesianChart.YAxes>
                <chart:NumericalAxis />
            </chart:SfCartesianChart.YAxes>

            <chart:SplineSeries
                ItemsSource="{Binding telemetry}"
                ShowDataLabels="True"
                XBindingPath="LocalTime"
                YBindingPath="Humidity" />

        </chart:SfCartesianChart>
    </VerticalStackLayout>

</ContentPage>