<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="ServoWeatherApp.Views.TemperaturePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:chart="clr-namespace:Syncfusion.Maui.Charts;assembly=Syncfusion.Maui.Charts"
    xmlns:models="clr-namespace:ServoWeatherApp.Models"
    xmlns:vm="clr-namespace:ServoWeatherApp.ViewModels"
    Title="TemperaturePage"
    x:DataType="vm:TemperaturePageViewModel">


    <chart:SfCartesianChart Title="Temperature">
        <chart:SfCartesianChart.XAxes>
            <chart:DateTimeAxis />
        </chart:SfCartesianChart.XAxes>

        <chart:SfCartesianChart.YAxes>
            <chart:NumericalAxis Interval="5" />
        </chart:SfCartesianChart.YAxes>

        <chart:LineSeries
            ItemsSource="{Binding telemetry}"
            ShowMarkers="True"
            XBindingPath="LocalTime"
            YBindingPath="Temperature" />

        <!--<chart:SplineSeries
            ItemsSource="{Binding telemetry}"
            ShowDataLabels="True"
            XBindingPath="LocalTime"
            YBindingPath="Temperature" />-->

    </chart:SfCartesianChart>
</ContentPage>