<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="ServoWeatherApp.Views.ServoMotorPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:model="clr-namespace:ServoWeatherApp.Models"
    xmlns:vm="clr-namespace:ServoWeatherApp.ViewModels"
    Title="ServoMotorPage"
    x:DataType="vm:ServoMotorPageViewModel">

    <VerticalStackLayout>
        <Label
            FontSize="20"
            HorizontalOptions="Center"
            MinimumWidthRequest="150"
            Text="SERVO MOTOR PLAY" />
        <Button
            Command="{Binding TurnOnCommand}"
            HorizontalOptions="Center"
            MinimumHeightRequest="100"
            MinimumWidthRequest="300"
            Text="Turn On" />
        <Button
            Command="{Binding TurnOffCommand}"
            HorizontalOptions="Center"
            MinimumHeightRequest="100"
            MinimumWidthRequest="300"
            Text="Turn Off" />
    </VerticalStackLayout>
</ContentPage>