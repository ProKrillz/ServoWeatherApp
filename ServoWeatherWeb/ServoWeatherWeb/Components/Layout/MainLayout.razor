@inherits LayoutComponentBase
@* Required *@
<MudThemeProvider />
<MudPopoverProvider />

@* Needed for dialogs *@
<MudDialogProvider />

@* Needed for snackbars *@
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@ToggleDrawer" />
        <MudSpacer />
        <MudIconButton Icon="fas fa-solid fa-user" Color="Color.Inherit" Edge="Edge.End" />
        <MudIconButton Icon="fas fa-solid fa-arrow-right-from-bracket" Color="Color.Inherit" Edge="Edge.End" Class="ms-2" />
    </MudAppBar>


    <MudDrawer @bind-Open="@_open" Elevation="1" Variant="@DrawerVariant.Mini">
        <MudDrawerHeader>
           @*  <MudText Typo="Typo.h6">Menu</MudText> *@
        </MudDrawerHeader>

        <MudNavMenu Color="Color.Inherit">
            <MudNavLink Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Store">Store</MudNavLink>
            <MudNavLink Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.LibraryBooks">Library</MudNavLink>
            <MudNavLink Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Group">Community</MudNavLink>
        </MudNavMenu>

    </MudDrawer>

    <MudMainContent Class="pt-16 px-16">
        @Body
    </MudMainContent>
</MudLayout>


<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>


@code {
    private bool _open = false;

    private void ToggleDrawer()
    {
        _open = !_open;
    }
}
